
ScreenManager:
    id: screen_manager

    MainScreen:
        id: mainscreen
        name: 'mainscreen'

    BrowserScreen:
        id: browserscreen
        name: 'browserscreen'


<MainScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'ANIME MANAGER'
            md_bg_color: (85/255,16/255,178/255,1)

            MDIconButton:
                id: menubutton
                icon: 'dots-vertical'
                theme_text_color: 'Custom'
                elevation: 0
                pos_hint: {'center_y':0.5}
                md_bg_color: (85/255,16/255,178/255,1)
                text_color: 1, 1, 1, 1
                on_release:
                    app.menu.check_position_caller(None, None, None)
                    app.menu.open()

        MDLabel:
            text: '' # important do not delete
    MDCard:
        size_hint: None, None
        size: 320, 400
        pos_hint: {'center_x':0.5, 'center_y':0.45}
        elevation: 15
        padding: 20
        spacing: 30
        orientation: 'vertical'
        # App stuff:

        MDLabel:
            text: 'ANIME MANAGER'
            halign: 'center'
            font_style: 'Button'
            font_size: 33
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1

        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 20
            padding: 15

            MDTextField:
                id: animeweb
                hint_text: 'Website'
                helper_text: 'Enter Website Name'
                helper_text_mode: 'on_focus'
                size_hint_x: None
                width: 150
                font_size: 20
                pos_hint: {'center_x':0.5}
                multiline: False
                color_mode: 'custom'
                line_color_focus: (0/255,5/255,58/255,1)

            MDTextField:
                id: episodenbr
                hint_text: 'Episode'
                size_hint_x: None
                width: 80
                font_size: 20
                pos_hint: {'center_x':0.5}
                multiline: False
                color_mode: 'custom'
                line_color_focus: (0,5/255,58/255,1)
                

        MDTextField:
            id: animename
            hint_text: 'Anime Name'
            helper_text: 'Enter Anime Name'
            helper_text_mode: 'on_focus'
            size_hint_x: None
            width: 230
            font_size: 20
            pos_hint: {'center_x':0.5}
            multiline: False
            color_mode: 'custom'
            line_color_focus: (0/255,5/255,58/255,1)

        MDRaisedButton:
            text: 'SEARCH'
            pos_hint: {'center_x':0.5}
            font_size: 15
            md_bg_color: (85/255,16/255,178/255,1)
            on_press: app.onClick() 
        Widget:
            size_hint_y: None
            height: 10


<BrowserScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'ANIME MANAGER'
            md_bg_color: (85/255,16/255,178/255,1)

            MDIconButton:
                icon: 'dots-vertical'
                tooltip_text: 'main screen'
                theme_text_color: 'Custom'
                elevation: 0
                pos_hint: {'center_y':0.5}
                md_bg_color: (85/255,16/255,178/255,1)
                text_color: 1, 1, 1, 1
                on_release:
                    root.manager.current = 'mainscreen'
                    root.manager.transition.direction = 'right'

        MDLabel:
            text: '' # important do not delete

    MDCard:
        size_hint: None, None
        size: 320, 400
        pos_hint: {'center_x':0.5, 'center_y':0.45}
        elevation: 15
        padding: 20
        spacing: 30
        orientation: 'vertical'
        # App stuff:

        MDLabel:
            text: 'BROWSERS'
            halign: 'center'
            font_style: 'Button'
            font_size: 33
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
